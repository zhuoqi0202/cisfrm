<ehcache name="shiro">
    <diskStore path="java.io.tmpdir/shiro-ehcache"/>
    <!-- 登录记录缓存  -->
    <cache name="passwordRetryCache"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>
</ehcache>